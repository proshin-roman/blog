<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
  <changeSet id="create-table-access_token" author="proshin">
    <createTable tableName="access_token">
      <column name="id" type="${primary-key-type}" autoIncrement="true">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_access_token"/>
      </column>
      <column name="provider" type="varchar(255)">
        <constraints nullable="false" unique="true" uniqueConstraintName="iu_access_token_provider"/>
      </column>
      <column name="token" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>
</databaseChangeLog>